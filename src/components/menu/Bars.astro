---
import BarsIcon from "@components/icons/Bars.astro";

const { class: className } = Astro.props;
---

<bars-button class={className}>
	<BarsIcon />
</bars-button>

<script>
	import { menuOpen } from "src/nano";

	class BarsButton extends HTMLElement {
		constructor() {
			super();
			this.addEventListener("click", () => menuOpen.set(!menuOpen.get()));
		}
	}

	customElements.define("bars-button", BarsButton);
</script>
