---
import Bars from "./Bars.astro";
import UserDoccers from "@components/icons/UserDoccers.astro";
import ThemeSwitch from "@components/ThemeSwitch.astro";
---

<menu-header class="p-2 h-16 dark:bg-theme-dark-sidebar bg-theme-light-sidebar">
	<Bars class="justify-self ml-1 h-7 w-7 text-black dark:text-white cursor-pointer" />
	<UserDoccers class="h-8 text-black dark:text-white" />
	<ThemeSwitch />
</menu-header>

<style>
	menu-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		z-index: 100;
		view-transition-name: menu-header;
	}

	::view-transition-group(menu-header) {
		z-index: 100;
	}

	@media (min-width: 768px) {
		menu-header {
			display: none;
		}
	}
</style>
