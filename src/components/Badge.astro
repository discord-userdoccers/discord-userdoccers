---
interface Props {
	href: string;
	tooltip: string;
	name: string;
}

const { href, tooltip, name } = Astro.props;
---

<a
	href={href}
	class="inline-flex items-center px-2.5 py-0.5 dark:text-text-dark text-text-light font-mono text-xs font-medium dark:bg-theme-dark-sidebar bg-theme-light-sidebar rounded-full focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-blurple focus-visible:ring-opacity-75"
>
	<abbr title={tooltip} class="no-underline">{name}</abbr>
</a>
