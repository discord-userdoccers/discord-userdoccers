---
import type { HTMLAttributes } from "astro/types";
interface Props extends HTMLAttributes<"tr"> {}

const { class: className, ...props } = Astro.props;
---

<tr
	class:list={["dark:even:bg-trueGray-900 dark:text-text-dark text-text-light bg-gray-100 even:bg-gray-50 dark:bg-trueGray-800", className]}
	{...props}
>
	<slot />
</tr>
