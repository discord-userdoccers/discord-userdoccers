{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
        "rootDir": "./",
        "outDir": "../dist/ci"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}